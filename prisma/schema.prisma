generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  avatar     String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Hotel      Hotel[]

  @@map("users")
}

model Hotel {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  address     String
  image       String?
  price       Float
  ownerId     Int
  owner       User     @relation(fields: [ownerId], references: [id])
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("hotels")
}
